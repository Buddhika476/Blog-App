# Example Environment Variables for Blog Application
# Copy this file to .env and update with your values

# Database Configuration
DATABASE_URL=mongodb://bloguser:blogpassword@localhost:27017/blog-app

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# MongoDB Direct Connection (Alternative)
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DATABASE=blog-app
MONGO_USERNAME=bloguser
MONGO_PASSWORD=blogpassword

# Rate Limiting
RATE_LIMIT_TTL=900000
RATE_LIMIT_LIMIT=1000

# File Upload Configuration
MAX_FILE_SIZE=5242880
UPLOAD_DEST=./uploads

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@blogapp.com

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret

# Logging
LOG_LEVEL=debug
LOG_FORMAT=combined

# API Configuration
API_PREFIX=api/v1
API_DOCS_ENABLED=true

# Cache Configuration (Redis - Optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
CACHE_TTL=3600

# Development Tools
SWAGGER_ENABLED=true
DEBUG_MODE=true
ENABLE_LOGGING=true