# Production Environment Template
# Copy this file to .env.production and update with your production values

# Database Configuration
DATABASE_URL=mongodb://your-prod-user:your-strong-password@your-mongodb-host:27017/blog-app-prod?authSource=admin&ssl=true

# JWT Configuration - MUST CHANGE THESE IN PRODUCTION
JWT_SECRET=GENERATE_A_VERY_STRONG_SECRET_KEY_AT_LEAST_64_CHARACTERS_LONG_FOR_PRODUCTION
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3001
NODE_ENV=production

# CORS Configuration - Update with your frontend domain
CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# MongoDB Direct Connection (Alternative)
MONGO_HOST=your-mongodb-host
MONGO_PORT=27017
MONGO_DATABASE=blog-app-prod
MONGO_USERNAME=your-prod-user
MONGO_PASSWORD=your-strong-password

# Rate Limiting - More restrictive for production
RATE_LIMIT_TTL=900000
RATE_LIMIT_LIMIT=100

# File Upload Configuration
MAX_FILE_SIZE=2097152
UPLOAD_DEST=./uploads

# Email Configuration - Required for production features
SMTP_HOST=your-smtp-host
SMTP_PORT=587
SMTP_USER=your-email@yourdomain.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourdomain.com

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=GENERATE_ANOTHER_STRONG_SECRET_FOR_SESSIONS

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# API Configuration
API_PREFIX=api/v1
API_DOCS_ENABLED=false

# Cache Configuration (Redis)
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
CACHE_TTL=3600

# Production Tools
SWAGGER_ENABLED=false
DEBUG_MODE=false
ENABLE_LOGGING=true

# Monitoring & Health Checks
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem